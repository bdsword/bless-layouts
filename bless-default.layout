<layout>
  <area type="offset">
    <display>
      <evenrow>
        <evencolumn>
          <foreground>dark red</foreground>
          <background>white</background>
        </evencolumn>
      </evenrow>
      <oddrow>
        <evencolumn>
          <foreground>dark red</foreground>
          <background>white</background>
        </evencolumn>
      </oddrow>
      <font>Monaco 12</font>
    </display>
  </area>
  <area type="separator">
    <display>
      <evenrow>
        <evencolumn>
          <foreground>dark green</foreground>
          <background>white</background>
        </evencolumn>
      </evenrow>
      <font>Monaco 12</font>
    </display>
  </area>
  <area type="hexadecimal">
    <case>upper</case>
    <display>
      <font>Monaco 12</font>
    </display>
  </area>
  <area type="separator">
    <display>
      <evenrow>
        <evencolumn>
          <foreground>dark green</foreground>
          <background>white</background>
        </evencolumn>
      </evenrow>
      <font>Monacos 12</font>
    </display>
  </area>
  <area type="ascii">
    <display>
      <font>Monacos 12</font>
    </display>
  </area>
</layout>
